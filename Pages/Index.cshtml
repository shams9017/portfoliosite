@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link href="@Url.Content("~/css/site.css")" rel="stylesheet" type="text/css" />
 <link href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />

 <div class="main-page">
     <nav class="navbar navbar-expand-lg ">
         <div>
             <img id="logo-thumb" src="/assets/images/logo_thumb.png" alt="Logo" />
         </div>

         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
             <span class="navbar-toggler-icon"></span>
         </button>
         <div class="collapse navbar-collapse" id="navbarNav">
             <ul class="navbar-nav">
                 <li class="nav-item active">
                     <a class="btn btn-outline-success border-0" href="#">Portfolio<span class="sr-only">(current)</span></a>
                 </li>
                 <li class="nav-item">
                     <a class="btn btn-outline-success border-0" href="#">About Me</a>
                 </li>
                 <li class="nav-item">
                     <button id="myBtn" class="btn btn-outline-success border-0" type="button">Contact</button>
                 </li>

             </ul>
         </div>
     </nav>

     <div class="card bg-light text-white">
         <div class="backdrop">
             <img class="card-img" src="/assets/images/backdrop_tech.png" alt="Card image">
         </div>

         <div class="card-img-overlay">
             <div class="container d-flex align-items-center flex-column">

                 <!-- Masthead Heading-->
                 <h1 class="masthead-heading text-uppercase mb-0">Shams Ahsanullah</h1>
                 <h2 class="masthead-subheading text-uppercase mb-0">Full Stack Web Developer</h2>
                 <!-- Icon Divider-->
                 <div class="divider-custom divider-light">
                     <div class="divider-custom-line"></div>
                     <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                     <div class="divider-custom-line"></div>
                 </div>

             </div>
         </div>
     </div>
     <!-- Portfolio-->
     <section class="page-section portfolio" id="portfolio">
         <div class="container">
             <h2 id="portfolio-heading" class="page-section-heading text-center text-uppercase text-secondary mb-0">Portfolio</h2>
             <!-- Icon Divider-->
             <div class="divider-custom">
                 <div class="divider-custom-line"></div>
                 <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                 <div class="divider-custom-line"></div>
             </div>
             <div class="row justify-content-center">
                 <div class="col-md-6 col-lg-4 mb-5">
                     <div class="portfolio-item mx-auto">
                         <img id="item-one" src="/assets/images/flutter_app_screenshot.jpg" alt="Card image">
                         <div class="centered">Flutter App</div>
                     </div>

                 </div>
                 <div class="col-md-6 col-lg-4 mb-5">
                     <div class="portfolio-item mx-auto">
                         <img id="item-two" src="/assets/images/web_api_json.png" alt="Card image">
                         <div class="centered">Web API</div>
                     </div>

                 </div>
                 <div class="col-md-6 col-lg-4 mb-5">
                     <div class="portfolio-item mx-auto">
                         <img id="item-three" src="/assets/images/erace.png" alt="Card image">
                         <div class="centered">ASP.NET Web App</div>
                     </div>

                 </div>

             </div>


         </div>
     </section>
     <!-- About Me-->
     <section class="page-section portfolio" id="about">
         <div class="container">
             
             <!-- Icon Divider-->
             <div id="about-content" >
                 <h2 id="portfolio-heading" class="page-section-heading text-center text-uppercase text-secondary mb-0">About Me</h2>
                 <div class="row">
                     <div class="col-lg-4 ml-auto"><p class="lead">Freelancer is a free bootstrap theme created by Start Bootstrap. The download includes the complete source files including HTML, CSS, and JavaScript as well as optional SASS stylesheets for easy customization.</p></div>
                     <div class="col-lg-4 mr-auto"><p class="lead">You can create your own custom avatar for the masthead, change the icon in the dividers, and add your email address to the contact form to make it fully functional!</p></div>
                 </div>
             </div>
                 
         </div>
     </section>



     <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
 </div>



